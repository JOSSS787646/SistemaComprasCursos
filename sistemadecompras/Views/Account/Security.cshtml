@model sistemadecompras.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Security</title>
    <link href="~/Content/animate.min.css" rel="stylesheet" />
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
</head>
<style>

    .toast-success {
        background-color: #28a745 !important;
    }

    .toast-error {
        background-color: #dc3545 !important;
    }
</style>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card animated fadeInDown shadow-lg p-3 mb-5 bg-body-tertiary rounded backborder-card">

                    <div class="card-header title-nav-color backborder-card" style="background-color:#003566; color:white">Inicia Sesion</div>
                    <div class="card-body">
                        @using (Html.BeginForm("Security", "Account", FormMethod.Post, new { id = "formUsuario" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row">

                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="mb-3 w-100">
                                        <label for="username" class="form-label">Nombre del Usuario</label>
                                        @Html.TextBoxFor(model => model.UserName,
                                                                     new
                                                                     {
                                                                         @class = "form-control form-control-sm",
                                                                         required = "required",
                                                                         placeholder = "Nombre de Usuario"
                                                                     })
                                        <div class="invalid-feedback">
                                            @Html.ValidationMessageFor(model => model.UserName,
                                                                         null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 w-100">
                                        <lable for="Password" class="form-label">Password</lable>
                                        @Html.PasswordFor(model => model.Password,
                                                                    new
                                                                    {
                                                                        @class = "form-control form-control-sm",

                                                                    })


                                        <div class="invalid-feedback">
                                            @Html.ValidationMessageFor(model => model.Password, null,
                                                                           new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <input type="submit" id="btnEnviar" class="btn btn-sm btn-success w-100" value="Login" />
                                </div>


                            </div>
                        }
                        @using (Html.BeginForm("ExternalLogin", "Account", FormMethod.Post))
                        {
                            <div class="col-xs-12 m-2">
                                <div class="row align-items-center">
                                    <div class="col-xs-12 col-md-6">
                                        <button type="submit" name="provider" value="Facebook" class="btn btn-primary btn-block">
                                            <i class="fab fa-facebook-f"></i> Iniciar con Facebook
                                        </button>
                                    </div>
                                    <div class="col-xs-12 col-md-6">
                                        <button type="submit" name="provider" value="Google" class="btn btn-danger btn-block">
                                            <i class="fab fa-google"></i> Iniciar con Google
                                        </button>
                                    </div>
                                </div>
                            </div>


                        }
                    </div>
                </div>
            </div>
        </div>
 

    </div>
    <div class="d-flex justify-content-center">
        <div class="spinner-border text-success" role="status" id="spinner">
            <span class="visually-hidden">Loading...</span>
        </div>

    </div>


</body>
</html>
<script>
    $(document).ready(function () {
        toastr.success("Exito , se comunico con el servidor de forma adecuada", "success")
        $('#spinner').hide();
        $('#btnEnviar').click(function () {
            let LoginViewModel = {};
            LoginViewModel.Password = $('#Password').val();
            LoginViewModel.UserName = $('#UserName').val();
            $('#spinner').show();
            $.ajax({
                url: "/Account/Security",
                type: "Post",
                data: $("#formUsuario").serialize(),
                success: function (data) {
                    $('#spinner').hide();
                    if (data.Id > 0) {
                        toastr.success("Exito , se comunico con el servidor de forma adecuada", "success")
                    }
                },
                error: function (xhr, textStatus, errorThrown) {
                    $('#spinner').hide()
                    toastr.error("Ocurrio un error al procesar la solicitud", "error")
                }
            });
        });
    });


</script>