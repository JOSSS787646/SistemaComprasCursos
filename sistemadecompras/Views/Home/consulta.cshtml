@model sistemadecompras.Models.Persona
@{
    ViewBag.Title = "consulta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-5 col-sm-12 col-lg-5">
            @using (Html.BeginForm("consulta", "Home", FormMethod.Post))

            {
                <div class="card">
                   
                    @Html.TextBoxFor(model => model.Nombre, null, new { @class = "form-control form-control-sm" })
                    <input type="submit" value="Enviar" class="btn btn-sm btn-outline-primary" />
                </div>
            }
        </div>
    </div>
    <div class="alert alert-danger">
        <p class="text-black"><strong>@ViewBag.algo</strong></p> 
    </div>
</div>
