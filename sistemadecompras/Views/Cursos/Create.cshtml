@model sistemadecompras.ViewModels.CursosViewModel
@{
    ViewBag.Title = "Create";
}
<noscript>
    <meta http-equiv="refresh" content="0;URL=@Url.Action("NoScript","Error")" />
</noscript>

<div class="container-fluid">
    @using (Html.BeginForm("Create", "Cursos", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded ">
                    <div class="card-body">
                        <h3 class="card-title font-title-little-dark-blue">
                            <i class="fas fa-tablet-alt"></i>
                            Agregar Curso
                        </h3>
                        <hr />
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                                <label>
                                    <i class="fas fa-edit"></i>
                                    Nombre del Curso
                                </label>
                                @Html.TextBoxFor(model => model.Nombre, null, new { @class = "form-control form-control-sm", placeholder = "El Nombre del Curso", required = "required" })
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                                <label>
                                    <i class="fas fa-dollar-sign"></i>

                                    Precio del Curso
                                </label>
                                @Html.TextBoxFor(model => model.Precio, new { @class = "form-control form-control-sm", placeholder = "El Precio del Curso", required = "required", type = "Number" })
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                                <label>
                                    <i class="fas fa-file-upload"></i>

                                    Subir Imagen
                                </label>
                                @Html.TextBoxFor(model => model.ImagenFile, new { @class = "form-control form-control-sm", placeholder = "La Imagen", required = "required", type = "file" })
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 d-inline-block">
                                <label>Descripcion del Cursos</label>
                                @Html.TextAreaFor(model => model.Contenido, new { @class = "form-control form-control-sm", placeholder = "Contenido descriptivo del curso", required = "required", rows = "10", cols = "50" })
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 d-grid gap-1 col-0 ms-lg-auto">
                                <br />
                                <input type="submit" value="Guardar" class="btn btn-sm btn-success" />
                            </div>
                            <div>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                        <span class="text-danger">@Html.ValidationMessage("FileError")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 d-inline-block">
                            <label>Categoría del Curso</label>
                            @Html.DropDownListFor(model => model.IdCategoria, new SelectList(ViewBag.Categorias, "Id", "Nombre"), "-- Seleccione una categoría --", new { @class = "form-control", required = "required" })
                        </div>


                    </div>
                </div>
            </div>
        </div>

    }
</div>


