@model sistemadecompras.Models.ContactDM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width, initial-scale=1 " />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/style-css.css" rel="stylesheet" />
    <link href="~/Content/_Header.css" rel="stylesheet" />
    <link href="~/Content/_Nav.css" rel="stylesheet" />
    <link href="~/Content/_Footer.css" rel="stylesheet" />
    <title>Principal</title>
</head>
<style>
    body {
        background-color: #1e2229 !important;
    }
</style>
<body>
    <div class="container">
        @Html.Partial("_Header")
        @Html.Partial("_Nav")

    </div>
    <main class="container">
        @using (Html.BeginForm("Contacto", "Manager", FormMethod.Post))
        {


        <div class="row">
            <div class="coll-xxl-12 col-sm-12 col-sd-12 col-lg-12">
                <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded">
                    <div class="card-body">
                        <h5 class="card-title font-title-color-orange">Tienes dudas o Preguntas?</h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary">Contactanos atravez</h6>
                        <div class="card-text">
                            <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-sm", placeholder = "Ingresa tu Email" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <br />
                        <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5" style="padding-bottom:15px;">
                            @Html.TextAreaFor(model => model.Observaciones, new { @class = "form-control form-control-sm", placeholder = "Escribenos",rows="10",cols="50" })
                            @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })

                        </div>

                        <a href="#" class="btn btn-sm btn-primary" id="header-nav">
                            <i class="fas fa-save"></i>
                            Enviar
                        </a>
                        <a href="#" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-comnent-slash"></i>
                            Cancelar
                        </a>
                    </div>
                </div>
            </div>
        </div>
        }
    </main>
        
    @Html.Partial("_Footer")

</body>
</html>

